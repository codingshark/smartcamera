<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/seekbar_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rounded_container"
		android:orientation="vertical"
		android:visibility="gone"
		android:clickable="true">
		<!-- clickable make the seekbar catch the touch event, instead of propagating to camera previre -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip"
			android:visibility="visible">
			<TextView
				android:id="@+id/view_seekbar_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:textSize="20sp"
				android:layout_alignParentLeft="true"/>
			<TextView
				android:id="@+id/view_seekbar_value"
				android:layout_marginLeft="20dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:gravity="center"
				android:textSize="20sp"
				android:layout_toRightOf="@+id/view_seekbar_name"/>
		</RelativeLayout>

		<SeekBar
			android:id="@+id/view_seekbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:thumb="@drawable/seekbar_thumb"
			android:maxHeight="5dip"
			android:minHeight="5dip"
			android:paddingLeft="25dip"
			android:paddingRight="25dip"
			android:paddingTop="10dip"
			android:paddingBottom="20dip" />
	</LinearLayout>
